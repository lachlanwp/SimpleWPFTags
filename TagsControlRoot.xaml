<UserControl x:Class="TagsControl.TagsControlRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagsControl"
             mc:Ignorable="d" 
             d:DesignHeight="60 " d:DesignWidth="300" x:Name="TagsControlEle">
    <Grid Background="LightGray">
        <WrapPanel Orientation="Horizontal" Name="TagsContainer">
            <TextBox Width="80" Height="18" Margin="5" Name="NewTagTextBox" BorderThickness="0,0,0,1" Background="Transparent" KeyDown="NewTagTextBox_KeyDown"></TextBox>
        </WrapPanel>
    </Grid>
</UserControl>
